<% if notice %>
  <div class="alert alert-success" role="alert">
    <p class="notice"><a href="#" class="close" data-dismiss="alert">&#215;</a><%= notice %></p>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning" role="alert">
    <p class="alert"><a href="#" class="close" data-dismiss="alert">&#215;</a<%= alert %></p>
  </div>
<% end %>
